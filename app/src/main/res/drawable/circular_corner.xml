<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/bottom_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
   <solid android:color="@android:color/white" /> <!-- Background color -->
   <stroke
       android:color="@color/black"
       android:width="2sp"/>    <!-- Border width -->
   <padding
       android:left="0dp"
       android:top="0dp"
       android:right="0dp"
       android:bottom="4dp" />   <!-- Padding to ensure the border is only at the bottom -->
</shape>
