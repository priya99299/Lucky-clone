<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Attendence_module">
    <LinearLayout
        android:id="@+id/attedencenav"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@color/purple">
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="36dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:text="@string/Attend"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/attedencenav">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp">
                <ImageView
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:src="@drawable/attendance"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Attendence"
                android:layout_marginStart="100dp"
                android:textSize="22dp"
                android:layout_marginTop="14dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp"
                android:layout_marginTop="70dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:src="@drawable/timetable"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lecture-Wise Attendence"
                    android:layout_marginStart="100dp"
                    android:textSize="22dp"
                    android:layout_marginTop="14dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardElevation="7dp"
                android:layout_marginTop="145dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:src="@drawable/attendance"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mark Attendence"
                    android:layout_marginStart="150dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>