<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFB"
    tools:context=".Canteen.Canteen">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Purple"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@color/white"
        app:title="College-Canteen"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:titleTextColor="@color/white" />

    <!-- Menu Section -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">



            <!-- Menu Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#E3F2FD">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thali (7 Roti, 1 SBJ, Rice, Sweet)"
                        android:textSize="16sp"
                        android:textColor="#263238"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A complete meal with roti, sabji, and more"
                        android:textSize="12sp"
                        android:textColor="#607D8B"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹60"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Menu Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#E3F2FD">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tea"
                        android:textSize="16sp"
                        android:textColor="#263238"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hot and refreshing chai"
                        android:textSize="12sp"
                        android:textColor="#607D8B"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹8"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Menu Item 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#E3F2FD">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="American Pizza"
                        android:textSize="16sp"
                        android:textColor="#263238"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classic pizza with a twist"
                        android:textSize="12sp"
                        android:textColor="#607D8B"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹60"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Menu Item 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#E3F2FD">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mexican Pizza"
                        android:textSize="16sp"
                        android:textColor="#263238"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spicy and cheesy delight"
                        android:textSize="12sp"
                        android:textColor="#607D8B"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹80"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Menu Item 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#E3F2FD">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="American Sandwich"
                        android:textSize="16sp"
                        android:textColor="#263238"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fresh and filling sandwich"
                        android:textSize="12sp"
                        android:textColor="#607D8B"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹60"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Menu Item 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#E3F2FD">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jam Butter Sandwich"
                        android:textSize="16sp"
                        android:textColor="#263238"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sweet and simple snack"
                        android:textSize="12sp"
                        android:textColor="#607D8B"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹40"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>