<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard">

    <!-- Fixed Header with Wave Background -->
    <RelativeLayout
        android:id="@+id/header_second_row"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:paddingBottom="16dp"
        android:background="@drawable/wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo Top-Left -->
        <ImageView
            android:id="@+id/college_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/lips"
            android:contentDescription="Logo" />

        <!-- College Name -->
        <TextView
            android:id="@+id/college_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/college_logo"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/college_logo"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:text="Lucky Institute of Professional Study"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="normal"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Student Profile Image (Circular) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profile_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <ImageView
                android:id="@+id/studentImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile1"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- Student Name -->
        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_card"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="KHUSH SONI"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Section Name -->
        <TextView
            android:id="@+id/Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Section A"
            android:textSize="12sp"
            android:textColor="@color/white" />

        <!-- Year Name -->
        <TextView
            android:id="@+id/yearname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Section"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="2023-2024"
            android:textSize="12sp"
            android:textColor="@color/white" />
    </RelativeLayout>

    <!-- Fixed Size Scrollable Dashboard Section -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/header_second_row"
        app:layout_constraintBottom_toTopOf="@id/btm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fixed Grid Layout with Consistent Dimensions -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="5"
            android:useDefaultMargins="false"
            android:alignmentMode="alignBounds">

            <!-- Row 1 -->
            <!-- Profile -->
            <LinearLayout
                android:id="@+id/stuProfile"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/Profile"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Documents -->
            <LinearLayout
                android:id="@+id/document"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/docum" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/document"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Fees -->
            <LinearLayout
                android:id="@+id/fees"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/fees" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/fees"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Row 2 -->
            <!-- Notice Board -->
            <LinearLayout
                android:id="@+id/Notice"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/noticeboard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/notice"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Attendance -->
            <LinearLayout
                android:id="@+id/attendence"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/attedence" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/attendance"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Notes -->
            <LinearLayout
                android:id="@+id/notes"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/note" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/notes"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Row 3 -->
            <!-- Time Table -->
            <LinearLayout
                android:id="@+id/e_learning"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/time_table" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Time Table"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Library -->
            <LinearLayout
                android:id="@+id/Library"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/booke" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/library"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Lecture Details -->
            <LinearLayout
                android:id="@+id/lecture_Details"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/training" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Lecture Details"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Row 4 -->
            <!-- Canteen -->
            <LinearLayout
                android:id="@+id/canteen"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/canteen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Canteen"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Academic Calendar -->
            <LinearLayout
                android:id="@+id/calender"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/calendar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/academic_calendar"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Result -->
            <LinearLayout
                android:id="@+id/Result"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/result" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Result"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Row 5 -->
            <!-- Message -->
            <LinearLayout
                android:id="@+id/messageSection"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/msg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Message"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Complaint -->
            <LinearLayout
                android:id="@+id/complaint"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/comments" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Complaint"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Contact Us -->
            <LinearLayout
                android:id="@+id/contact"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:src="@drawable/contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Contact-US"
                    android:textSize="11sp"
                    android:textColor="@color/dark_grey"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

        </GridLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Logout Button (Fixed at Bottom) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btm"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/logout"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:backgroundTint="@color/Purple"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>