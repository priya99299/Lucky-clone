<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Left: Book Icon -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_menu_book"
        android:contentDescription="Book Icon"
      />

        <!-- Right: Book Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Book Title -->
            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let Us C"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/black" />

            <!-- Author + Publisher (single line) -->
            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KANETKAR | BPB"
                android:textSize="11sp"
                android:textColor="#555555"
                android:layout_marginTop="2dp" />

            <!-- Issue & Return Dates -->
            <TextView
                android:id="@+id/issueDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issued: 29 Jul | Return: 12 Aug"
                android:textSize="10sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp" />

            <!-- Fine & Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/fineAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fine: â‚¹0"
                    android:textSize="13sp"
                    android:textColor="#D32F2F"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISSUED"
                    android:textStyle="bold"
                    android:textSize="13sp"
                 />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
